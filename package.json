{
  "name": "salesforce-app",
  "private": true,
  "version": "1.0.0",
  "description": "Salesforce App",
  "scripts": {
    "lint": "./node_modules/.bin/eslint **/lwc/**/*.js --ignore-pattern '.history/**'",
    "test": "npm run test:unit",
    "test:unit": "./node_modules/.bin/sfdx-lwc-jest -- --passWithNoTests",
    "test:unit:watch": "./node_modules/.bin/sfdx-lwc-jest --watch",
    "test:unit:debug": "./node_modules/.bin/sfdx-lwc-jest --debug",
    "test:unit:coverage": "./node_modules/.bin/sfdx-lwc-jest --coverage",
    "prettier": "./node_modules/.bin/prettier --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "prettier:verify": "./node_modules/.bin/prettier --check \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "prepare": "husky || true",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.0",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@lwc/eslint-plugin-lwc": "^3.1.0",
    "@prettier/plugin-xml": "^3.4.1",
    "@salesforce/eslint-config-lwc": "^4.0.0",
    "@salesforce/eslint-plugin-aura": "^3.0.0",
    "@salesforce/eslint-plugin-lightning": "^2.0.0",
    "@salesforce/sfdx-lwc-jest": "^7.0.2",
    "eslint": "^9.29.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "prettier-plugin-apex": "^2.2.6"
  },
  "lint-staged": {
    "**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}": [
      "./node_modules/.bin/prettier --write"
    ],
    "**/{aura,lwc}/**/*.js": [
      "./node_modules/.bin/eslint"
    ],
    "**/lwc/**": [
      "./node_modules/.bin/sfdx-lwc-jest -- --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.77",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@salesforce/mcp": "^0.17.0"
  }
}
