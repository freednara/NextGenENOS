<?xml version="1.0" encoding="UTF-8" ?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description
  >ENOS Basic Access - Minimal e-commerce functionality for basic users</description>
    <label>ENOS Basic Access</label>
    
    <!-- Custom Permissions -->
    <customPermissions>
        <enabled>true</enabled>
        <name>ENOS_User</name>
    </customPermissions>
    
    <!-- Object Permissions -->
    <objectPermissions>
        <allowCreate>false</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>false</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Product2</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>
    
    <objectPermissions>
        <allowCreate>false</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>false</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Category__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>
    
    <!-- Apex Class Access -->
    <classAccesses>
        <apexClass>ENOS_ProductController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_SecurityUtils</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_LoggingUtils</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_PerformanceConfig</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
</PermissionSet>
