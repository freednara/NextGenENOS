<?xml version="1.0" encoding="UTF-8" ?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description
  >ENOS Admin Access - Provides administrative access to e-commerce functionality</description>
    <label>ENOS Admin Access</label>
    
    <!-- Custom Permissions -->
    <customPermissions>
        <enabled>true</enabled>
        <name>ENOS_User</name>
    </customPermissions>
    
    <customPermissions>
        <enabled>true</enabled>
        <name>ENOS_Admin</name>
    </customPermissions>
    
    <!-- Object Permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>true</modifyAllRecords>
        <object>Cart__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>true</modifyAllRecords>
        <object>Cart_Item__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Product2</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>
    
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>true</modifyAllRecords>
        <object>Category__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <!-- Apex Class Access -->
    <classAccesses>
        <apexClass>ENOS_CartController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_ProductController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_InvoiceController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_SecurityUtils</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_DynamicUtils</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_CartService</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_InvoiceService</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <!-- Field Permissions for Product2 -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Product2.Stock_Quantity__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <fieldPermissions>
        <editable>true</editable>
        <field>Product2.Is_Top_Seller__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <fieldPermissions>
        <editable>true</editable>
        <field>Product2.Image_URL__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <!-- Field Permissions for Cart__c (only non-required fields) -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Cart__c.Contact__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <fieldPermissions>
        <editable>true</editable>
        <field>Cart__c.Subtotal__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <fieldPermissions>
        <editable>true</editable>
        <field>Cart__c.Total_Items__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <!-- Field Permissions for Cart_Item__c (only non-required fields) -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Cart_Item__c.Product__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <fieldPermissions>
        <editable>true</editable>
        <field>Cart_Item__c.Line_Total__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <!-- Field Permissions for Category__c (only non-required fields) -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Category__c.Description__c</field>
        <readable>true</readable>
    </fieldPermissions>
    

    
</PermissionSet>
