<?xml version="1.0" encoding="UTF-8" ?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description
  >ENOS Admin Access - Provides administrative access to e-commerce functionality</description>
    <label>ENOS Admin Access</label>
    
    <!-- Custom Permissions -->
    <customPermissions>
        <enabled>true</enabled>
        <name>ENOS_User</name>
    </customPermissions>
    
    <customPermissions>
        <enabled>true</enabled>
        <name>ENOS_Admin</name>
    </customPermissions>
    
    <!-- Object Permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>true</modifyAllRecords>
        <object>Cart__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>true</modifyAllRecords>
        <object>Cart_Item__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Product2</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>
    
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>true</modifyAllRecords>
        <object>Category__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <!-- Apex Class Access -->
    <classAccesses>
        <apexClass>ENOS_CartController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_ProductController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOSController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    

    
    <classAccesses>
        <apexClass>ENOS_SecurityUtils</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_DynamicUtils</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_AdvancedDynamicUtils</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_UserModeSecurityUtils</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_ConfigurationUtils</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_LoggingUtils</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <classAccesses>
        <apexClass>ENOS_PerformanceConfig</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
</PermissionSet>
