# ========================================
# SALESFORCE METADATA SPECIFIC
# ========================================

# Custom metadata that shouldn't be deployed
# force-app/main/default/customMetadata/ - Deploy for configuration management

# Static resources that are too large or sensitive
force-app/main/default/staticresources/secure/
force-app/main/main/default/staticresources/*.zip
force-app/main/main/default/staticresources/*.tar.gz

# Named credentials (may contain sensitive data)
force-app/main/default/namedCredentials/

# Connected apps (may contain secrets)
force-app/main/default/connectedApps/

# Auth providers
force-app/main/default/authproviders/

# External data sources
force-app/main/default/externalDataSources/

# Remote site settings
force-app/main/default/remoteSiteSettings/

